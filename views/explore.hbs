  <main>
    <section class="blog-posts">
      <h1>EXPLORE</h1>
      {{#if blogAllPosts}}
        <div class="posts-container">
          {{#each blogAllPosts}}
            <div class="blog-post">
              <h4> title:- {{this.title}}</h4>
              <img src="{{this.image}}" alt="Blog Image">
            <h4>content:- <p>{{this.content}}</p></h4> 
